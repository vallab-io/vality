// Prisma Schema for Vality
// 뉴스레터 + 웹 아카이빙 플랫폼

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// User - 사용자 (뉴스레터 발행자)
// ============================================
model User {
  id           String   @id @default(cuid())
  email        String   @unique
  username     String   @unique
  name         String?
  bio          String?
  avatarUrl    String?  @map("avatar_url")
  passwordHash String?  @map("password_hash")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  newsletters Newsletter[] // 1:N (무료: 1개, 유료: 여러 개)

  @@map("users")
}

// ============================================
// Newsletter - 뉴스레터 (채널)
// 사용자가 운영하는 뉴스레터 브랜드/채널
// ============================================
model Newsletter {
  id          String  @id @default(cuid())
  name        String // 뉴스레터 이름 (예: "John's Weekly")
  description String? // 뉴스레터 설명
  senderName  String? @map("sender_name") // 발신자 이름
  timezone    String  @default("Asia/Seoul")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // 소유자 (User와 1:N 관계 - 무료: 1개, 유료: 여러 개)
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId String @map("owner_id")

  issues      Issue[]
  subscribers Subscriber[]

  @@index([ownerId])
  @@map("newsletters")
}

// ============================================
// Issue - 뉴스레터 이슈 (개별 발행 글)
// 뉴스레터에서 발행하는 개별 글/이메일
// ============================================
model Issue {
  id            String      @id @default(cuid())
  title         String
  slug          String
  content       String      @db.Text
  excerpt       String? // 미리보기 텍스트
  coverImageUrl String?     @map("cover_image_url")
  status        IssueStatus @default(DRAFT)
  publishedAt   DateTime?   @map("published_at")
  scheduledAt   DateTime?   @map("scheduled_at")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  newsletter   Newsletter @relation(fields: [newsletterId], references: [id], onDelete: Cascade)
  newsletterId String     @map("newsletter_id")

  emailLogs EmailLog[]

  @@unique([newsletterId, slug])
  @@index([newsletterId, status])
  @@index([publishedAt])
  @@map("issues")
}

enum IssueStatus {
  DRAFT // 초안
  SCHEDULED // 예약됨
  PUBLISHED // 발행됨
  ARCHIVED // 보관됨
}

// ============================================
// Subscriber - 구독자
// 뉴스레터를 구독하는 사람
// ============================================
model Subscriber {
  id             String    @id @default(cuid())
  email          String
  status         SubStatus @default(PENDING)
  subscribedAt   DateTime  @default(now()) @map("subscribed_at")
  confirmedAt    DateTime? @map("confirmed_at")
  unsubscribedAt DateTime? @map("unsubscribed_at")

  newsletter   Newsletter @relation(fields: [newsletterId], references: [id], onDelete: Cascade)
  newsletterId String     @map("newsletter_id")

  emailLogs EmailLog[]

  @@unique([newsletterId, email])
  @@index([newsletterId, status])
  @@map("subscribers")
}

enum SubStatus {
  PENDING // 확인 대기
  ACTIVE // 활성
  UNSUBSCRIBED // 구독 취소
}

// ============================================
// EmailLog - 이메일 발송 로그
// Issue 발송 시 각 구독자별 발송 기록
// ============================================
model EmailLog {
  id        String      @id @default(cuid())
  status    EmailStatus @default(PENDING)
  sentAt    DateTime?   @map("sent_at")
  openedAt  DateTime?   @map("opened_at")
  clickedAt DateTime?   @map("clicked_at")
  createdAt DateTime    @default(now()) @map("created_at")

  issue   Issue  @relation(fields: [issueId], references: [id], onDelete: Cascade)
  issueId String @map("issue_id")

  subscriber   Subscriber @relation(fields: [subscriberId], references: [id], onDelete: Cascade)
  subscriberId String     @map("subscriber_id")

  @@index([issueId])
  @@index([subscriberId])
  @@map("email_logs")
}

enum EmailStatus {
  PENDING // 대기
  SENT // 발송됨
  DELIVERED // 전달됨
  OPENED // 열람됨
  CLICKED // 클릭됨
  BOUNCED // 반송됨
  FAILED // 실패
}

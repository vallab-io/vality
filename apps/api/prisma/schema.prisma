// Prisma Schema for Vality
// 뉴스레터 + 웹 아카이빙 플랫폼

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// User - 사용자 (뉴스레터 발행자)
// ============================================
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String?  @unique // 온보딩 시 설정
  name      String?
  bio       String?
  avatarUrl String?  @map("avatar_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  accounts    Account[] // 소셜 로그인 계정들
  newsletters Newsletter[]

  @@map("users")
}

// ============================================
// Account - 소셜 로그인 계정 (OAuth)
// 인증 플로우: 소셜 로그인 선택 → 인증 진행 → 성공
// ============================================
model Account {
  id                String   @id @default(cuid())
  provider          String // google, apple
  providerAccountId String   @map("provider_account_id")
  createdAt         DateTime @default(now()) @map("created_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @map("user_id")

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

// ============================================
// VerificationCode - 이메일 인증 코드
// 인증 플로우: 이메일 입력 → 인증코드 발송 → 코드 입력 → 검증
// ============================================
model VerificationCode {
  id        String   @id @default(cuid())
  email     String
  code      String // 6자리 인증 코드
  expiresAt DateTime @map("expires_at") // 만료 시간 (10분)
  createdAt DateTime @default(now()) @map("created_at")

  @@unique([email, code])
  @@index([email])
  @@index([expiresAt])
  @@map("verification_codes")
}

// ============================================
// Newsletter - 뉴스레터 (채널)
// 사용자가 운영하는 뉴스레터 브랜드/채널
// ============================================
model Newsletter {
  id          String  @id @default(cuid())
  name        String // 뉴스레터 이름
  slug        String // URL용 슬러그
  description String?
  senderName  String? @map("sender_name")
  timezone    String  @default("Asia/Seoul")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId String @map("owner_id")

  issues      Issue[]
  subscribers Subscriber[]

  @@unique([ownerId, slug])
  @@index([ownerId])
  @@map("newsletters")
}

// ============================================
// Issue - 뉴스레터 이슈 (개별 발행 글)
// ============================================
model Issue {
  id            String      @id @default(cuid())
  title         String
  slug          String
  content       String      @db.Text
  excerpt       String?
  coverImageUrl String?     @map("cover_image_url")
  status        IssueStatus @default(DRAFT)
  publishedAt   DateTime?   @map("published_at")
  scheduledAt   DateTime?   @map("scheduled_at")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  newsletter   Newsletter @relation(fields: [newsletterId], references: [id], onDelete: Cascade)
  newsletterId String     @map("newsletter_id")

  emailLogs EmailLog[]

  @@unique([newsletterId, slug])
  @@index([newsletterId, status])
  @@index([publishedAt])
  @@map("issues")
}

enum IssueStatus {
  DRAFT
  SCHEDULED
  PUBLISHED
  ARCHIVED
}

// ============================================
// Subscriber - 구독자
// ============================================
model Subscriber {
  id             String    @id @default(cuid())
  email          String
  status         SubStatus @default(PENDING)
  subscribedAt   DateTime  @default(now()) @map("subscribed_at")
  confirmedAt    DateTime? @map("confirmed_at")
  unsubscribedAt DateTime? @map("unsubscribed_at")

  newsletter   Newsletter @relation(fields: [newsletterId], references: [id], onDelete: Cascade)
  newsletterId String     @map("newsletter_id")

  emailLogs EmailLog[]

  @@unique([newsletterId, email])
  @@index([newsletterId, status])
  @@map("subscribers")
}

enum SubStatus {
  PENDING
  ACTIVE
  UNSUBSCRIBED
}

// ============================================
// EmailLog - 이메일 발송 로그
// ============================================
model EmailLog {
  id        String      @id @default(cuid())
  status    EmailStatus @default(PENDING)
  sentAt    DateTime?   @map("sent_at")
  openedAt  DateTime?   @map("opened_at")
  clickedAt DateTime?   @map("clicked_at")
  createdAt DateTime    @default(now()) @map("created_at")

  issue   Issue  @relation(fields: [issueId], references: [id], onDelete: Cascade)
  issueId String @map("issue_id")

  subscriber   Subscriber @relation(fields: [subscriberId], references: [id], onDelete: Cascade)
  subscriberId String     @map("subscriber_id")

  @@index([issueId])
  @@index([subscriberId])
  @@map("email_logs")
}

enum EmailStatus {
  PENDING
  SENT
  DELIVERED
  OPENED
  CLICKED
  BOUNCED
  FAILED
}
